generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// --- Enums ---
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   // "MANAGER" or "SUPERVISOR"
  logs      SystemLog[]
}

model Student {
  id              Int       @id @default(autoincrement())
  name            String
  universityId    String    @unique
  nationalId      String    @unique
  college         String
  year            String
  phone           String?
  guardianContact String?
  city            String?
  status          String    @default("ACTIVE") // "ACTIVE", "EVACUATED"
  
  roomId          Int?
  room            Room?     @relation(fields: [roomId], references: [id])
  
  attendance      Attendance[]
  penalties       Penalty[]
  complaints      Complaint[]
  
  @@index([status])  // ✅ For filtering active/evacuated students
}

model Room {
  id           Int       @id @default(autoincrement())
  roomNumber   String
  building     String
  floor        Int
  capacity     Int       @default(3)
  currentCount Int       @default(0)
  status       String    @default("AVAILABLE") // "AVAILABLE", "MAINTENANCE"
  
  students     Student[]
  faults       MaintenanceFault[]

  @@unique([roomNumber, building])
  @@index([building, floor])  // ✅ For filtering by building and floor
  @@index([status])           // ✅ For finding available rooms
}

model Attendance {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  status    String   // "PRESENT", "ABSENT", "EXCUSED"
  note      String?
  
  studentId Int
  student   Student  @relation(fields: [studentId], references: [id])
  
  @@index([date])      // ✅ For date-based queries
  @@index([studentId]) // ✅ For student attendance history
}

model Complaint {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  status      String   @default("PENDING") // "PENDING", "RESOLVED"
  priority    String   @default("MEDIUM")  // "LOW", "MEDIUM", "HIGH"
  createdAt   DateTime @default(now())
  
  studentId   Int
  student     Student  @relation(fields: [studentId], references: [id])
}

// --- Legacy/Other Models ---
model Penalty {
  id          Int      @id @default(autoincrement())
  reason      String
  type        String
  date        DateTime @default(now())
  studentId   Int
  student     Student  @relation(fields: [studentId], references: [id])
}

model MaintenanceFault {
  id          Int      @id @default(autoincrement())
  description String
  type        String
  priority    String   @default("MEDIUM") // "LOW", "MEDIUM", "HIGH"
  status      String   @default("PENDING")
  location    String?
  roomId      Int?
  room        Room?    @relation(fields: [roomId], references: [id])
  createdAt   DateTime @default(now())
}

model SystemLog {
  id        Int      @id @default(autoincrement())
  action    String
  details   String?
  timestamp DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

// --- New Models for Phase 2: Database Integration ---

model Notification {
  id        Int      @id @default(autoincrement())
  type      String   // "NEW_STUDENT", "EMERGENCY", "SYSTEM_UPDATE", "ANNOUNCEMENT"
  title     String
  message   String
  timestamp DateTime @default(now())
  isRead    Boolean  @default(false)
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  
  @@index([userId, isRead])
}

model Memorandum {
  id            Int      @id @default(autoincrement())
  title         String
  target        String   // "ALL", "BUILDING", "FLOOR"
  targetDetails String?  // Building name or floor number
  importance    String   // "NORMAL", "URGENT"
  content       String
  createdAt     DateTime @default(now())
  createdById   Int
  createdBy     User     @relation(fields: [createdById], references: [id])
  
  @@index([createdAt])
}

model InventoryItem {
  id            Int     @id @default(autoincrement())
  name          String
  category      String
  totalQuantity Int
  perStudent    Boolean
  icon          String
  
  @@index([category])
}